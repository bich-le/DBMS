#:import Clock kivy.clock.Clock

<ManagerScreen>:
    on_enter: self.ids.screen_manager.current = "customers"
    MDNavigationLayout:
        MDScreenManager:
            id: screen_manager

            CustomerScreen:
                id: customers_screen
                name: "customers"
                
            BranchEmployeeScreen:
                id: branch_employees_screen
                name: "branch_employees"

            MDScreen:
                name: "interest_rate"
                MDBoxLayout:
                    orientation: "vertical"
                    MDTopAppBar:
                        title: "Interest Rate"
                        left_action_items: [["menu", lambda x: app.root.get_screen("m").ids.nav_drawer.set_state("open")]]
                    MDLabel:
                        text: "Interest rate content"
                        halign: "center"

            MDScreen:
                name: "branch_transactions"
                MDBoxLayout:
                    orientation: "vertical"
                    MDTopAppBar:
                        title: "Branch Transactions"
                        left_action_items: [["menu", lambda x: app.root.get_screen("m").ids.nav_drawer.set_state("open")]]
                    MDLabel:
                        text: "Branch transactions content"
                        halign: "center"

            MDScreen:
                name: "reports"
                MDBoxLayout:
                    orientation: "vertical"
                    MDTopAppBar:
                        title: "Reports"
                        left_action_items: [["menu", lambda x: app.root.get_screen("m").ids.nav_drawer.set_state("open")]]
                    ReportBox:
                        id: report_box

            MDScreen:
                name: "suspicion"
                MDBoxLayout:
                    orientation: "vertical"
                    MDTopAppBar:
                        title: "Suspicion"
                        left_action_items: [["menu", lambda x: app.root.get_screen("m").ids.nav_drawer.set_state("open")]]
                    MDLabel:
                        text: "Suspicion content"
                        halign: "center"

            MDScreen:
                name: "system_history"
                MDBoxLayout:
                    orientation: "vertical"
                    MDTopAppBar:
                        title: "System History"
                        left_action_items: [["menu", lambda x: app.root.get_screen("m").ids.nav_drawer.set_state("open")]]
                    MDLabel:
                        text: "System history content"
                        halign: "center"

        MDNavigationDrawer:
            id: nav_drawer
            radius: 0, dp(16), dp(16), 0
            MDNavigationDrawerMenu:

                MDNavigationDrawerHeader:
                    title: "Manager Panel"
                    title_color: "#4a4939"
                    spacing: "4dp"
                    padding: "16dp", "8dp", 0, "8dp"

                MDNavigationDrawerDivider:

                DrawerItem:
                    icon: "account-group"
                    text: "Customers"
                    on_release:
                        screen_manager.current = "customers"
                        root.ids.customers_screen.load_customers()
                        nav_drawer.set_state("close")

                DrawerItem:
                    icon: "account"
                    text: "Branch Employees"
                    on_release:
                        screen_manager.current = "branch_employees"
                        root.ids.branch_employees_screen.load_employees()
                        nav_drawer.set_state("close")
                        
                DrawerItem:
                    icon: "percent"
                    text: "Interest Rate"
                    on_release:
                        screen_manager.current = "interest_rate"
                        nav_drawer.set_state("close")

                DrawerItem:
                    icon: "history"
                    text: "Branch Transactions"
                    on_release:
                        screen_manager.current = "branch_transactions"
                        nav_drawer.set_state("close")

                DrawerItem:
                    icon: "file-chart"
                    text: "Reports"
                    on_release:
                        screen_manager.current = "reports"
                        nav_drawer.set_state("close")

                DrawerItem:
                    icon: "account-alert"
                    text: "Suspicion"
                    on_release:
                        screen_manager.current = "suspicion"
                        nav_drawer.set_state("close")

                DrawerItem:
                    icon: "cog"
                    text: "System History"
                    on_release:
                        screen_manager.current = "system_history"
                        nav_drawer.set_state("close")

                MDNavigationDrawerDivider:
                    height: "1dp"

                DrawerItem:
                    icon: "arrow-left"
                    text: "Log Out"
                    on_release:
                        root.manager.transition.direction = "right"
                        root.manager.current = "main"

<CustomerScreen>:
    name: "customers"
    MDBoxLayout:
        orientation: "vertical"
        MDTopAppBar:
            title: "Customer Management"
            left_action_items: [["menu", lambda x: app.root.get_screen("m").ids.nav_drawer.set_state("open")]]
        MDBoxLayout:
            orientation: "horizontal"
            padding: dp(10)
            spacing: dp(10)

            # Left panel - Customer list
            MDBoxLayout:
                orientation: "vertical"
                size_hint_x: 0.4
                spacing: dp(10)

                MDTextField:
                    id: customer_search_field
                    hint_text: "Search customers..."
                    on_text: root.filter_customers(self.text)
                    size_hint_y: None
                    height: dp(48)

                ScrollView:
                    MDList:
                        id: customer_list

                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: dp(110)

                    MDRaisedButton:
                        text: "Show Table"
                        size_hint_y: None
                        height: dp(48)
                        size_hint_x: 1
                        on_release: root.show_customer_table()

                    Widget:
                        size_hint_y: None
                        height: dp(14)

                    MDRaisedButton:
                        text: "Edit Customer"
                        size_hint_y: None
                        height: dp(48)
                        size_hint_x: 1

            # Right panel - Customer details
            MDBoxLayout:
                orientation: "vertical"
                spacing: dp(10)

                MDCard:
                    size_hint_y: None
                    height: dp(300)
                    padding: dp(15)
                    spacing: dp(10)
                    orientation: "vertical"
                    
                    MDLabel:
                        id: customer_name
                        text: "Select a customer"
                        font_style: "H5"
                        halign: "left"
                        theme_text_color: "Primary"
                    
                    MDLabel:
                        id: customer_id
                        text: ""
                        font_style: "Subtitle2"

                    MDBoxLayout:
                        MDLabel:
                            text: "Sex: "
                            size_hint_x: 0.3
                        MDLabel:
                            id: customer_sex
                            text: ""

                    MDBoxLayout:
                        MDLabel:
                            text: "DOB: "
                            size_hint_x: 0.3
                        MDLabel:
                            id: customer_dob
                            text: ""

                    MDBoxLayout:
                        MDLabel:
                            text: "Phone: "
                            size_hint_x: 0.3
                        MDLabel:
                            id: customer_phone
                            text: ""

                    MDBoxLayout:
                        MDLabel:
                            text: "Address: "
                            size_hint_x: 0.3
                        MDLabel:
                            id: customer_address
                            text: ""

                    MDBoxLayout:
                        MDLabel:
                            text: "Join Date: "
                            size_hint_x: 0.3
                        MDLabel:
                            id: customer_join_date
                            text: ""
                                                       
                    MDBoxLayout:
                        MDLabel:
                            text: "Email: "
                            size_hint_x: 0.3
                        MDLabel:
                            id: customer_email
                            text: ""

                    MDBoxLayout:
                        MDLabel:
                            text: "Branch: "
                            size_hint_x: 0.3
                        MDLabel:
                            id: customer_branch
                            text: ""

                MDLabel:
                    text: "Accounts"
                    font_style: "H6"
                    size_hint_y: None
                    height: dp(20)

                ScrollView:
                    MDList:
                        id: account_list



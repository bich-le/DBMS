#:import Clock kivy.clock.Clock

<DirectorScreen>:
    name: "c"
    on_enter: self.ids.screen_manager.current = "customers" 
    MDNavigationLayout:
        MDScreenManager:
            id: screen_manager
            
            CustomerScreen:
                id: customers_screen
                name: "customers"

            EmployeeScreen:
                id: employees_screen
                name: "employees"
                
            MDScreen:
                name: "transactions"
                MDBoxLayout:
                    orientation: "vertical"
                    MDTopAppBar:
                        title: "Transaction History"
                        left_action_items: [["menu", lambda x: root.ids.nav_drawer.set_state("open")]]
                    MDLabel:
                        text: "Transaction history content"
                        halign: "center"

            MDScreen:
                name: "history"
                MDBoxLayout:
                    orientation: "vertical"
                    MDTopAppBar:
                        title: "History"
                        left_action_items: [["menu", lambda x: root.ids.nav_drawer.set_state("open")]]
                    MDLabel:
                        text: "History content"
                        halign: "center"

            SuspicionScreen:
                id: suspicion_screen
                name: "suspicion"
                

            MDScreen:
                name: "report"
                MDBoxLayout:
                    orientation: "vertical"
                    MDTopAppBar:
                        title: "Reports"
                        left_action_items: [["menu", lambda x: root.ids.nav_drawer.set_state("open")]]
                    ReportBox:
                        id: report_box

            MDScreen:
                name: "system"
                MDBoxLayout:
                    orientation: "vertical"
                    MDTopAppBar:
                        title: "System Settings"
                        left_action_items: [["menu", lambda x: root.ids.nav_drawer.set_state("open")]]
                    MDLabel:
                        text: "System settings content"
                        halign: "center"

        MDNavigationDrawer:
            id: nav_drawer
            radius: 0, dp(16), dp(16), 0
            MDNavigationDrawerMenu:

                MDNavigationDrawerHeader:
                    title: "Director Panel"
                    title_color: "#4a4939"
                    spacing: "4dp"
                    padding: "16dp", "8dp", 0, "8dp"

                MDNavigationDrawerDivider:

                DrawerItem:
                    icon: "account-group"
                    text: "Customers"
                    on_release:
                        nav_drawer.set_state("close")
                        Clock.schedule_once(lambda dt: setattr(screen_manager, "current", "customers"), 0.1)
                        Clock.schedule_once(lambda dt: root.ids.customers_screen.load_customers(), 0.1)


                DrawerItem:
                    icon: "account"
                    text: "Employees"
                    on_release:
                        nav_drawer.set_state("close")
                        Clock.schedule_once(lambda dt: setattr(screen_manager, "current", "employees"), 0.1)
                        Clock.schedule_once(lambda dt: root.ids.employees_screen.load_employees(), 0.1)

                DrawerItem:
                    icon: "history"
                    text: "Transactions"
                    on_release:
                        nav_drawer.set_state("close")
                        Clock.schedule_once(lambda dt: setattr(screen_manager, "current", "transactions"), 0.1)
                        
                DrawerItem:
                    icon: "account-alert"
                    text: "Suspicions"
                    on_release:
                        nav_drawer.set_state("close")
                        Clock.schedule_once(lambda dt: setattr(screen_manager, "current", "suspicion"), 0.1)
                        Clock.schedule_once(lambda dt: root.ids.suspicion_screen.load_data(), 0.1)


                DrawerItem:
                    icon: "file-chart"
                    text: "Report"
                    on_release:
                        nav_drawer.set_state("close")
                        Clock.schedule_once(lambda dt: setattr(screen_manager, "current", "report"), 0.1)

                DrawerItem:
                    icon: "cog"
                    text: "System"
                    on_release:
                        nav_drawer.set_state("close")
                        Clock.schedule_once(lambda dt: setattr(screen_manager, "current", "system"), 0.1)

                MDNavigationDrawerDivider:
                    height: "1dp"

                DrawerItem:
                    icon: "arrow-left"
                    text: "Log Out"
                    on_release:
                        root.manager.transition.direction = "right"
                        root.manager.current = "main"

<CustomerScreen>:
    name: "customers"
    MDBoxLayout:
        orientation: "vertical"
        MDTopAppBar:
            title: "Customer Management"
            left_action_items: [["menu", lambda x: root.open_parent_nav_drawer()]]
        MDBoxLayout:
            orientation: "horizontal"
            padding: dp(10)
            spacing: dp(10)

            # Left panel - Customer list
            MDBoxLayout:
                orientation: "vertical"
                size_hint_x: 0.4
                spacing: dp(10)

                MDTextField:
                    id: customer_search_field
                    hint_text: "Search customers..."
                    on_text: root.filter_customers(self.text)
                    size_hint_y: None
                    height: dp(48)

                ScrollView:
                    MDList:
                        id: customer_list

                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: dp(110)

                    MDRaisedButton:
                        text: "Show Table"
                        size_hint_y: None
                        height: dp(48)
                        size_hint_x: 1
                        on_release: root.show_customer_table()

                    Widget:
                        size_hint_y: None
                        height: dp(14)

                    MDRaisedButton:
                        text: "Edit Customer"
                        size_hint_y: None
                        height: dp(48)
                        size_hint_x: 1

            # Right panel - Customer details
            MDBoxLayout:
                orientation: "vertical"
                spacing: dp(10)

                MDCard:
                    size_hint_y: None
                    height: dp(300)
                    padding: dp(15)
                    spacing: dp(10)
                    orientation: "vertical"
                    
                    MDLabel:
                        id: customer_name
                        text: "Select a customer"
                        font_style: "H5"
                        halign: "left"
                        theme_text_color: "Primary"
                    
                    MDLabel:
                        id: customer_id
                        text: ""
                        font_style: "Subtitle2"

                    MDBoxLayout:
                        MDLabel:
                            text: "Sex: "
                            size_hint_x: 0.3
                        MDLabel:
                            id: customer_sex
                            text: ""

                    MDBoxLayout:
                        MDLabel:
                            text: "DOB: "
                            size_hint_x: 0.3
                        MDLabel:
                            id: customer_dob
                            text: ""

                    MDBoxLayout:
                        MDLabel:
                            text: "Phone: "
                            size_hint_x: 0.3
                        MDLabel:
                            id: customer_phone
                            text: ""

                    MDBoxLayout:
                        MDLabel:
                            text: "Address: "
                            size_hint_x: 0.3
                        MDLabel:
                            id: customer_address
                            text: ""

                    MDBoxLayout:
                        MDLabel:
                            text: "Join Date: "
                            size_hint_x: 0.3
                        MDLabel:
                            id: customer_join_date
                            text: ""
                                                       
                    MDBoxLayout:
                        MDLabel:
                            text: "Email: "
                            size_hint_x: 0.3
                        MDLabel:
                            id: customer_email
                            text: ""

                    MDBoxLayout:
                        MDLabel:
                            text: "Branch: "
                            size_hint_x: 0.3
                        MDLabel:
                            id: customer_branch
                            text: ""

                MDLabel:
                    text: "Accounts"
                    font_style: "H6"
                    size_hint_y: None
                    height: dp(20)

                ScrollView:
                    MDList:
                        id: account_list



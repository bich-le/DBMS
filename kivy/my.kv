<MainScreen>:
    MDBoxLayout:
        orientation: "vertical"
        spacing: "20dp"
        padding: "30dp"
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        size_hint: 0.8, None
        height: self.minimum_height

        MDLabel:
            text: "DTNB BANK"
            halign: "center"
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color
            font_style: "H5"
            bold: True

        MDTextField:
            id: username
            hint_text: "Username"
            leading_icon: "account"
            mode: "rectangle"

        MDTextField:
            id: password
            hint_text: "Password"
            password: True
            leading_icon: "lock"
            mode: "rectangle"

        MDRaisedButton:
            text: "Sign in"
            md_bg_color: app.theme_cls.primary_color
            pos_hint: {"center_x": 0.5}
            on_release: root.login()

<TellerScreen>:
    MDBoxLayout:
        orientation: "vertical"
        padding: "20dp"
        spacing: "20dp"

        MDLabel:
            text: "Welcome Teller"
            halign: "center"
            font_style: "H6"

        MDRaisedButton:
            text: "Go Back"
            pos_hint: {"center_x": 0.5}
            on_release:
                root.manager.current = "main"
                root.manager.transition.direction = "right"
                app.root.get_screen('main').ids.username.text = ''
                app.root.get_screen('main').ids.password.text = ''


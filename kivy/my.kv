<MainScreen>:
    MDBoxLayout:
        orientation: "vertical"
        spacing: "20dp"
        padding: "30dp"
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        size_hint: 0.8, None
        height: self.minimum_height

        MDBoxLayout:
            orientation: "vertical"
            spacing: "8dp"
            size_hint_y: None
            height: dp(140)  # Tăng chiều cao cho header

            Image:
                source: "logo.png"
                size_hint: None, None
                size: dp(96), dp(96)  # Phóng to logo
                allow_stretch: True
                pos_hint: {"center_x": 0.5}

            MDLabel:
                text: "DTNB BANK"
                theme_text_color: "Custom"
                text_color: app.theme_cls.primary_color
                font_style: "H5"
                bold: True
                halign: "center"
                size_hint_y: None
                height: dp(32)

            MDLabel:
                text: "Guiding Your Finances — In Every Direction."
                theme_text_color: "Custom"
                text_color: 0.5, 0.5, 0.5, 0.6  # Màu xám nhạt, có alpha
                font_style: "Subtitle2"
                halign: "center"
                size_hint_y: None
                height: dp(24)

        MDTextField:
            id: username
            hint_text: "Username"
            leading_icon: "account"
            mode: "rectangle"

        MDTextField:
            id: password
            hint_text: "Password"
            password: True
            leading_icon: "lock"
            mode: "rectangle"

        MDRaisedButton:
            text: "Sign in"
            md_bg_color: app.theme_cls.primary_color
            pos_hint: {"center_x": 0.5}
            on_release: root.login()

<DirectorScreen>:
    MDBoxLayout:
        orientation: "vertical"
        padding: "30dp"
        spacing: "10dp"

        MDBoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: self.minimum_height
            spacing: "12dp"
            pos_hint: {"center_x": 0.5}
            size_hint_x: None
            width: "300dp"

            MDRaisedButton:
                text: "Customers"
                md_bg_color: app.theme_cls.primary_color
                size_hint_x: 1
                height: "48dp"
                font_style: "Button"
                bold: True

            MDRaisedButton:
                text: "Employees"
                md_bg_color: app.theme_cls.primary_color
                size_hint_x: 1
                height: "48dp"
                font_style: "Button"
                bold: True

            MDRaisedButton:
                text: "Transaction History"
                md_bg_color: app.theme_cls.primary_color
                size_hint_x: 1
                height: "48dp"
                font_style: "Button"
                bold: True

            MDRaisedButton:
                text: "Report"
                md_bg_color: app.theme_cls.primary_color
                size_hint_x: 1
                height: "48dp"
                font_style: "Button"
                bold: True

            MDRaisedButton:
                text: "Suspicion"
                md_bg_color: app.theme_cls.primary_color
                size_hint_x: 1
                height: "48dp"
                font_style: "Button"
                bold: True

            MDRaisedButton:
                text: "System history"
                md_bg_color: app.theme_cls.primary_color
                size_hint_x: 1
                height: "48dp"
                font_style: "Button"
                bold: True

        Widget:  # chiếm không gian đẩy Go Back xuống
            size_hint_y: 1

        MDBoxLayout:
            size_hint_y: None
            height: "50dp"
            padding: "10dp"
            MDRaisedButton:
                text: "Go Back"
                md_bg_color: app.theme_cls.primary_color
                size_hint: None, None
                size: "120dp", "40dp"
                on_release:
                    root.manager.current = "main"
                    root.manager.transition.direction = "right"
                    app.root.get_screen('main').ids.username.text = ''
                    app.root.get_screen('main').ids.password.text = ''
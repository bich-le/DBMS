<MainScreen>:
    MDBoxLayout:
        orientation: "vertical"
        spacing: "20dp"
        padding: "30dp"
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        size_hint: 0.8, None
        height: self.minimum_height

        MDBoxLayout:
            orientation: "horizontal"
            spacing: "8dp"
            size_hint_y: None
            height: dp(60)

            Widget:
                size_hint_x: 0.5  # Điều chỉnh giá trị này để dịch sang phải

            Image:
                source: "logo.jpg"
                size_hint: None, None
                size: dp(48), dp(48)
                allow_stretch: True

            MDLabel:
                text: "DTNB BANK"
                theme_text_color: "Custom"
                text_color: app.theme_cls.primary_color
                font_style: "H5"
                bold: True
                size_hint_y: None
                height: dp(48)

        MDTextField:
            id: username
            hint_text: "Username"
            leading_icon: "account"
            mode: "rectangle"

        MDTextField:
            id: password
            hint_text: "Password"
            password: True
            leading_icon: "lock"
            mode: "rectangle"

        MDRaisedButton:
            text: "Sign in"
            md_bg_color: app.theme_cls.primary_color
            pos_hint: {"center_x": 0.5}
            on_release: root.login()

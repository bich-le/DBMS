WindowManager:
    MainWindow:
    SecondWindow:

<MainWindow>:
    name: "main"

    Label:
        text: "Username:"
        size_hint: (0.2,0.1)
        pos_hint:{"x": 0.2, "y": 0.6}

    TextInput:
        id: name
        multiline: False
        size_hint: (0.4, 0.1)
        pos_hint: {"x": 0.4, "y": 0.6}

    Label:
        text: "Password:"
        size_hint: (0.2, 0.1)
        pos_hint: {"x": 0.2, "y": 0.5}

    TextInput:
        id: passw
        multiline: False
        size_hint: (0.4, 0.1)
        pos_hint: {"x": 0.4, "y": 0.5}

    Button:
        text: "Submit"
        size_hint: (0.3, 0.1)
        pos_hint: {"x": 0.35, "y": 0.35}
        on_release: 
            app.root.current = "second" if (passw.text == "bich" and name.text == "bich") else "main"
            root.manager.transition.direction = "left"
<SecondWindow>:
    name: "second"

    Button:
        text: "Go Back"
        on_release: 
            app.root.current = "main"
            root.manager.transition.direction = "right"